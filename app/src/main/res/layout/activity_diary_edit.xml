<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DiaryEditActivity">
    <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/PageNumber" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="기억하려는 페이지 번호를 써주세요"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="288dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/PageNumber" android:id="@+id/Describe"
            android:hint="인상 깊은 문구나 감상을 자유롭게 적어요"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_check_black_24dp"
            android:id="@+id/doneFab2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:tint="#FEFEFE" app:backgroundTint="#FFC107"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_delete_black_24dp"
            android:id="@+id/deleteFab2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:tint="#FEFEFE"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_photo_camera_black_24dp"
            android:id="@+id/takePhoto" android:tint="#FEFEFE"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toStartOf="@+id/doneFab2" app:backgroundTint="#26AC17"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_photo_library_black_24dp"
            android:id="@+id/selectPhoto" app:layout_constraintEnd_toStartOf="@+id/takePhoto"
            android:layout_marginEnd="52dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:tint="#FEFEFE" app:backgroundTint="#40998B"/>
</android.support.constraint.ConstraintLayout>